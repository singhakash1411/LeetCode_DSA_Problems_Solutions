class Solution {
public:
    int longestSubarray(vector<int>& nums) {
        
        int left =0; 
        int cnt=0;int maxlen=0;
        for(int right =0; right < nums.size(); right++){
            if(nums[right] == 0)cnt +=1;

            while(cnt > 1){
                if(nums[left] == 0){
                    cnt -=1;
                }
                 left +=1;
            }
            maxlen=max(maxlen, right-left);
        }
        return maxlen;
        
    }
};
